<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_focused="true"  android:state_enabled="false" android:state_pressed="true" android:drawable="@drawable/operator_baloon" />
    <item android:state_focused="true"  android:state_enabled="false"                              android:drawable="@drawable/operator_baloon" />
    <item android:state_focused="true"                                android:state_pressed="true" android:drawable="@drawable/operator_baloon_active" />
    <item android:state_focused="false"                               android:state_pressed="true" android:drawable="@drawable/operator_baloon_active" />
    <item android:state_focused="true"                                                             android:drawable="@drawable/operator_baloon_active" />
    <item android:state_selected="true"                                                             android:drawable="@drawable/operator_baloon_active" />
    <item android:state_selected="false"                                                             android:drawable="@drawable/operator_baloon" />
    <item android:drawable="@drawable/operator_baloon" />
</selector>